@model SchoolProject.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="display-4">Edit Room</h1>

    <form asp-action="Edit" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="RoomId" />
            <div class="form-group">
            <label asp-for="RoomName" class="font-weight-bold">Room Name</label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
   <p></p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
