@model IEnumerable<SchoolProject.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="display-4">Rooms</h1>

<p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
    <table class="table table-bordered">
        <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomName)
            </th>
            <th>
                 Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomName)
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
                @*<a asp-action="Delete" asp-route-id="@item.RoomId">Delete</a>*@
                    @Html.ActionLink("Delete","Delete",new {id = @item.RoomId},
                new {
                @class="btn btn-danger btn-sm",
                onclick = "return confirm('Are You Want To Delet This Room?');"})
            </td>
        </tr>
}
    </tbody>
</table>
</div>
